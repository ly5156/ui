{{#unless secretOnly}}
  <td data-title="{{t "formSources.kind.label"}}">
      {{#if source.source}}
        {{source.source}}
      {{else}}
        <span class="text-muted">{{t "generic.na"}}</span>
      {{/if}}
  </td>
  <td>&nbsp;</td>
{{/unless }}
<td data-title="{{t "formSources.kind.label"}}">
  {{#if (eq source.source "secret")}}
    {{#if model.refData}}
      {{model.refData.name}}
      <button class="btn bg-transparent" {{action 'editSecret' model.refData}}>
        <i class="icon icon-edit"/>
        {{t "generic.edit"}}
      </button>
    {{else}}
      {{t 'cloneCrossCluster.newContainer.errors.noPermissionAccessResource' type=source.source name=source.sourceName}}
    {{/if}}
  {{else if (eq source.source "configMap")}}
    {{#if model.refData}}
      {{model.refData.name}}
      <button class="btn bg-transparent" {{action 'editConfigMap' model.refData}}>
        <i class="icon icon-edit"/>
        {{t "generic.edit"}}
      </button>
    {{else}}
      {{t 'cloneCrossCluster.newContainer.errors.noPermissionAccessResource' type=source.source name=source.sourceName}}
    {{/if}}
  {{else if (eq source.source "field")}}
    {{input type="text" value=source.sourceName classNames="form-control" placeholder=(t "formSources.field.placeholder")}}
  {{else if (eq source.source "resource")}}
    {{input type="text" value=source.sourceName classNames="form-control" placeholder=(t "formSources.container.placeholder")}}
  {{else}}
    {{#if source}}
      {{source.sourceName}}
    {{else}}
      <span class="text-muted">{{t "generic.na"}}</span>
    {{/if}}
  {{/if}}
</td>
<td>&nbsp;</td>
<td data-title="{{t "formSources.prefixOrKey.label"}}">
  {{#if (or (eq source.source "secret") (eq source.source "configMap"))}}
    {{searchable-select
      classNames="form-control"
      optionValuePath="id"
      optionLabelPath="label"
      content=prefixOrKeys
      value=source.sourceKey
      readOnly=(not source.sourceName)
    }}
  {{else if (eq source.source "resource")}}
    {{input type="text" value=source.sourceKey classNames="form-control" placeholder=(t "formSources.resource.placeholder")}}
  {{else}}
    <span class="text-muted">{{t "generic.na"}}</span>
  {{/if}}
</td>
<td>
  <div class="text-center">
    {{#if (or specificKeyOnly (eq source.source "field") (eq source.source "resource"))}}
      {{t "generic.as"}}
    {{else if (eq source.sourceKey null)}}
      {{t "generic.prefix"}}
    {{else}}
      {{t "generic.as"}}
    {{/if}}
  </div>
</td>

<td data-title="{{t "formSources.prefix.label"}}">
  {{#input-or-display value=prefixOrTarget classesForDisplay="text-muted form-control-static"}}
    {{input type="text" value=prefixOrTarget classNames="form-control" disabled=(and (not source.sourceName) (not-eq source.source "resource") (not-eq source.source "field"))}}
  {{/input-or-display}}
</td>
<td>
   <button class="btn bg-primary btn-sm" {{action remove model}}>
      <i class="icon icon-minus"/><span class="sr-only">{{t "generic.remove"}}</span>
    </button>
  {{!-- {{#if (eq source.source "secret")}}
  <button class="btn bg-primary btn-sm" {{action 'editSecret' model.refData}}>
    <i class="icon icon-edit"/><span class="sr-only">{{t "generic.edit"}}</span>
  </button>
  {{/if}}
  {{#if (eq source.source "configMap")}}
  <button class="btn bg-primary btn-sm" {{action 'editConfigMap' model.refData}}>
    <i class="icon icon-edit"/><span class="sr-only">{{t "generic.edit"}}</span>
  </button>
  {{/if}} --}}
</td>
