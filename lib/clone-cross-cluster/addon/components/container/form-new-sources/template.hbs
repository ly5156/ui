{{#if sources.length}}
  <div class="clearfix">
    <label class="acc-label">{{t 'cloneCrossCluster.newContainer.environment.newFrom'}}</label>
  </div>
  <div>
      <table class="table fixed no-lines small mb-10">
        <thead>
          <tr class="hidden-sm">
            <th width="140">{{t 'formSources.type.label'}}{{field-required}}</th>
            <th width="10"></th>
            <th width="220">{{t 'formSources.source.label'}}{{field-required}}</th>
            <th width="10"></th>
            <th>{{t 'formSources.prefixOrKey.label'}}{{field-required}}</th>
            <th width="70"></th>
            <th>{{t 'formSources.prefix.label'}}</th>
            <th width="100">&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          {{#each sources as |source|}}
            {{form-new-sources-row
              model=source
              namespace=namespace
              targetNamespace=targetNamespace
              remove=(action "removeSource")
              updateSecret=updateSecret
              updateConfigMap=updateConfigMap
            }}
          {{/each}}
        </tbody>
      </table>
  </div>
{{/if}}
