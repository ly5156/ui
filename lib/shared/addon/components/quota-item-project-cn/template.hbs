<div class="quota-item-cn">
  <div style="position:relative;width: 240px;min-width:240px;border-right:1px solid #ebebeb;border-bottom:none">
    {{#if hasPermissions}}
      <div class="quota-item-edit">
        {{#basic-dropdown
            horizontalPosition="right"
            calculatePosition=(action "calculatePosition" )
            onOpen=(action 'actionsOpen')
            onClose=(action 'actionsClosed')
            as |dd|
        }}

          {{#dd.trigger
              ariaLabel=(t 'generic.moreActions')
              class=(concat "btn bg-transparent more-actions " sizeClass)
          }}
            <i class="icon icon-fw icon-vertical-ellipsis"></i>
          {{/dd.trigger}}

          {{#dd.content class="resource-actions global-actions"}}

            <li style="cursor: pointer;">
              {{action-menu-item
                label="action.edit"
                icon="icon icon-edit"
                action=(action 'clickedAction')
              }}
            </li>

          {{/dd.content}}

        {{/basic-dropdown}}
      </div>
    {{/if}}
    <div class="quota-title">
      <b>{{quotaName}}</b>
      <span>
        {{quotaState}}
      </span>
    </div>
    <div class="quota-container">
      <span>
        {{firstLetterQuotaName}}
      </span>
      <div class="quota-container-size">
        {{#if (eq percent 'N/A')}}
          <b>{{percent}}</b>
        {{else}}
          <b>{{percent}}%</b>
        {{/if}}
      </div>
      <div class="quota-container-state">
        {{t 'quotasCn.common.usage'}}
      </div>
    </div>
    <div class="quota-progress">
      <div class="quota-progress-total">
        <span style="font-size: 12px;">{{t 'quotasCn.common.use'}} <span style="font-size: 12px;">{{used}}</span></span>
        <br>
        <span style="font-size: 12px;">{{t 'quotasCn.common.total'}} <span style="font-size: 12px;">{{quotaTotalText}}</span></span>
      </div>
      {{#if (eq percent 'N/A')}}
        {{progress-bar
          percent=0
          color='quota'
        }}
      {{else}}
        {{progress-bar-multi
          values=quotaPercentData.value
          max=maxQuotas
          tooltipValues=quotaPercentData.tooltipValues
          tooltipArrayOrString="array"
          tooltipTemplate="-ns-quota-progressbar"
          minPercent=0
        }}
      {{/if}}
      <div class="quota-progress-total">
        <span style="font-size: 12px;">{{t 'quotasCn.remain'}} <span style="font-size: 12px;">{{quotaPercentData.canAssigned}}</span></span>
      </div>
    </div>
  </div>
  <div class="quota-namespqce-table">
    <div class="quota-namespqce-table-fixed">
      {{#sortable-table
        tableClassNames="bordered"
        headers=headers
        body=namespaceQuotasFormat
        descending=descending
        showHeader=false
        rowActions=false
        bulkActions=false
        as |namespaceQuotasFormat kind row dt|
      }}
      {{/sortable-table}}
    </div>
    <div class="quota-namespqce-table-inner">
      {{#sortable-table
        tableClassNames="bordered"
        headers=headers
        body=namespaceQuotasFormat
        descending=descending
        showHeader=false
        rowActions=false
        bulkActions=false
        as |namespaceQuotasFormat kind row dt|
      }}
        {{#if (eq kind "row")}}
          <tr class="main-row">
            <td class="pl-10">
              <div style="display:flex; justify-content:flex-start; align-items:center;">
                <img style="margin-right: 5px" class="icon-chevron-describe" src="{{app.baseAssets}}assets/images/logos/menu-icon-cn/projects-icon.svg" width="12" height="12" />
                {{#link-to 'authenticated.project.ns.resource-quota' row.name }}
                  {{row.name}}
                {{/link-to}}
              </div>
            </td>
            <td class="pl-10">
              {{row.used}}
            </td>
            <td class="text-right pr-30">
              {{row.percent}}
            </td>
          </tr>
        {{else if (eq kind "nomatch")}}
          <td colspan="5" class="text-center text-muted lacsso pt-20 pb-20">{{t "imageRepoSection.projectsPage.table.noData"}}</td>
        {{else if (eq kind "norows")}}
          <td colspan="5" class="text-center text-muted lacsso pt-20 pb-20">{{t "imageRepoSection.projectsPage.table.noData"}}</td>
        {{/if}}
      {{/sortable-table}}
    </div>
  </div>
</div>

