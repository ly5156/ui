{{#if modalVisible}}
<form class="modal-container large-modal alert">
  {{top-errors errors=errors}}
  <h2 class="alert-header">{{t "imageRepoSection.tagPage.addLabel"}}</h2>
  <hr/>
  <div style="display: flex;flex-wrap:wrap;">
    {{#each labels as |item|}}
      <label style={{item.style}} class="clip">
      {{input type="checkbox" class="form-control" checked=item.checked}} <span class={{item.classNames}}></span> {{item.name}}
      </label>
    {{/each}}
  </div>
{{save-cancel editing=editing save=(action "save") cancel=(action "cancel") createLabel="imageRepoSection.adminConfigPage.saveHarborConfig"}}
</form>
{{/if}}
