{{#if modalVisible}}
<form class="modal-container large-modal alert">

  <h2 class="alert-header">{{t "harborConfig.form.addMember.title"}}</h2>
  <hr/>
  {{top-errors errors=errors}}
  <div class="row">
    <div style="display:flex;margin-top:20px; position:relative;" >
      <div style="width:120px;margin-right:200px;"><label for="user">{{t "harborConfig.form.addMember.username.label"}}{{field-required}}</label></div>
      <div>
        {{input id="user" class="form-control" value=username placeholder=(t "harborConfig.form.addMember.username.placeholder")}}
      </div>

    </div>
    <div style="display:flex;margin-top:50px">
      <div style="width:120px;margin-right:200px;">{{t "harborConfig.form.addMember.role.label"}}{{field-required}}</div>
      <div>
        {{#each checkRadio as |item|}}
        <div>
          {{#input-or-display value=openOrTransparent}}
            {{#radio-button name="role" type="radio" id=item.id selection=role  value=item.id}}
            {{/radio-button}}
          {{/input-or-display}}
          <label class="acc-label" for={{item.id}} style="font-size: 15px; color: #454545;user-select: none;">{{item.name}}</label>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
{{save-cancel saving=saving save=(action "save") cancel=(action "cancel")}}
</form>
{{/if}}
