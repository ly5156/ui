<div class="row">
  <div class="col span-2 mt-5">
    {{searchable-select
      content=operatorContent
      class="form-control"
      value=model.metricRule.comparison
      readOnly=(and (not-eq model._targetType "metric") (not-eq model._targetType "commonRules") (not-eq model._targetType "podRebootRule"))
    }}
  </div>
  <div class="col span-2 mt-5">
    {{#unless (eq model.metricRule.comparison hasValue)}}
      {{input-number
        class="form-control"
        value=model.metricRule.thresholdValue
        readOnly=(and (not-eq model._targetType "metric") (not-eq model._targetType "commonRules") (not-eq model._targetType "podRebootRule"))
        placeholder="e.g. 10"
        min=0
      }}
    {{/unless}}
  </div>
  <div class="col span-1 text-right">
    <div style={{verbStyles}}>
      {{t "alertPage.newOrEdit.for"}}
    </div>
  </div>
  <div class="col span-4 mt-5">
    {{searchable-select
      content=durationContent
      class="form-control"
      value=model.metricRule.duration
      readOnly=(and (not-eq model._targetType "metric") (not-eq model._targetType "commonRules") (not-eq model._targetType "podRebootRule"))
    }}
  </div>
</div>

