<section class="header clearfix">
  <div class="pull-left">
    <h1>
      {{if isCreate (t "alertPage.new.addRuleHeader") (t "alertPage.new.editRuleHeader")}}
    </h1>
  </div>
</section>

{{#unless monitoringEnabled}}
  {{#banner-message color="bg-info mb-10 mt-10"}}
    <p>
      {{t "alertPage.newOrEdit.monitoringDisabled"}}
      {{#link-to-external "authenticated.cluster.monitoring.cluster-setting" scope.currentCluster.id}}
        {{t "alertPage.newOrEdit.enableMonitoring"}}
      {{/link-to-external}}.
    </p>
  {{/banner-message}}
{{/unless}}

<div>
  {{#if (eq pageScope "cluster")}}
    <div class="mb-10 pt-5">
      {{alert/form-cluster-rule-row
        pageScope=pageScope
        isCreate=isCreate
        model=alertRule
        monitoringEnabled=monitoringEnabled
        metrics=metrics
        commonRules=commonRules
        editRule=editRule
        alertGroup=alertGroup
        mode=mode
        level=level
      }}
    </div>
  {{else if (eq pageScope "project")}}
    {{alert/form-project-rule-row
      pageScope=pageScope
      isCreate=isCreate
      model=alertRule
      alertRules=alertRules
      metrics=metrics
      commonRules=commonRules
      editRule=editRule
      monitoringEnabled=monitoringEnabled
      alertGroup=alertGroup
      mode=mode
      level=level
    }}
  {{/if}}
</div>

<div class="mt-20">
  {{top-errors errors=errors}}
</div>

<div class="mv-20">
  {{save-cancel
    createLabel=(if isCreate "alertPage.create" "alertPage.save")
    save=(action "save")
    cancel=(action "cancel")
  }}
</div>
